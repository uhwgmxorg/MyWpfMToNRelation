<Window x:Class="MyWpfMToNRelation.BindingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyWpfMToNRelation"
        mc:Ignorable="d"
        Title="Bindings Window" Height="450" Width="200" MaxWidth="200" MinWidth="200">
    <Grid>
        <DataGrid ItemsSource="{Binding Bindings}" Margin="10,10,10,35" AddingNewItem="DataGrid_AddingNewItem"/>
        <Button Content="Close" Margin="0,0,10,8" HorizontalAlignment="Right" Width="67" Height="20" VerticalAlignment="Bottom" Click="Button_Close_Click"/>
    </Grid>
</Window>
